    "@docusaurus/theme-mermaid": "^3.5",
    "@docusaurus/types": "^3.5",
    "@easyops-cn/docusaurus-search-local": "^0.49.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",

{
    "name": "drevops/vortex-tests",
    "description": "Test for the Vortex project",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "cweagans/composer-patches": "^2"
    },
    "require-dev": {
        "alexskrypnyk/file": "^0.15",
        "alexskrypnyk/phpunit-helpers": "^0.12.2",
        "alexskrypnyk/shellvar": "^1.2.1",
        "czproject/git-php": "^4.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1.2",
        "drevops/phpcs-standard": "^0.2",
        "drupal/coder": "^8.3.31",
        "ergebnis/composer-normalize": "^2.48.2",
        "phpstan/phpstan": "^2.1.31",
        "phpunit/phpunit": "^12.4.2",
        "rector/rector": "^2.2.7",
        "squizlabs/php_codesniffer": "^3.13.4"
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\File\\Tests\\": "vendor/alexskrypnyk/file/tests/",
            "DrevOps\\Vortex\\Tests\\": "phpunit/"
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "discard-changes": true,
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor",
        "test": "phpunit",
        "test-fixtures": "UPDATE_FIXTURES=1 phpunit --no-coverage --filter=testDockerComposeConfig"
    }
}

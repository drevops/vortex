{
    "name": "drevops/vortex-tests",
    "description": "Test for the Vortex project",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://www.drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/drevops/vortex",
    "support": {
        "issues": "https://github.com/drevops/vortex/issues",
        "source": "https://github.com/drevops/vortex"
    },
    "require": {
        "php": ">=8.3",
        "cweagans/composer-patches": "^2"
    },
    "require-dev": {
        "alexskrypnyk/file": "^0.19.0",
        "alexskrypnyk/phpunit-helpers": "^0.15",
        "alexskrypnyk/shellvar": "^1.4.0",
        "czproject/git-php": "^4.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2.0",
        "drevops/phpcs-standard": "^0.6.2",
        "drupal/coder": "^9@alpha",
        "ergebnis/composer-normalize": "^2.48.2",
        "phpstan/phpstan": "^2.1.33",
        "phpunit/phpunit": "^12.5.6",
        "rector/rector": "^2.3.1",
        "squizlabs/php_codesniffer": "^4.0.1"
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "DrevOps\\Vortex\\Tests\\": "phpunit/"
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "bump-after-update": true,
        "discard-changes": true,
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpstan",
            "rector --dry-run"
        ],
        "lint-fix": [
            "rector",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor",
        "test": "phpunit",
        "update-snapshots": "UPDATE_SNAPSHOTS=1 phpunit --no-coverage --filter=testDockerComposeConfig"
    }
}

{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "formatter": "string",
  "ignoreFiles": [
    "scss/_components.scss",
    "fonts/**/*.scss",
    "build/.*"
  ],
  "rules": {
    "scss/at-extend-no-missing-placeholder": true,
    "scss/comment-no-empty": null,
    "scss/dollar-variable-pattern": "^_?[a-z]+([a-z0-9-]+[a-z0-9]+)?$"
  }
}

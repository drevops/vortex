{
    "name": "drevops/vortex-installer",
    "description": "Installer for Vortex.",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://www.drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/drevops/vortex",
    "support": {
        "issues": "https://github.com/drevops/vortex/issues",
        "source": "https://github.com/drevops/vortex"
    },
    "require": {
        "php": ">=8.5.3",
        "alexskrypnyk/file": "^0.19.0",
        "alexskrypnyk/str2name": "^1.4.1",
        "composer/composer": "^2.9.5",
        "cweagans/composer-patches": "^2",
        "czproject/git-php": "^4.6",
        "guzzlehttp/guzzle": "^7.10",
        "laravel/prompts": "^0.3.14",
        "nelexa/zip": "^4.0.2",
        "nikic/iter": "^2.4.1",
        "sebastian/diff": "^6.0.2",
        "symfony/console": "^7.4.4",
        "symfony/filesystem": "^7.4.0",
        "symfony/yaml": "^7.4.1"
    },
    "require-dev": {
        "alexskrypnyk/phpunit-helpers": "^0.15",
        "alexskrypnyk/snapshot": "^1.0.0",
        "bamarni/composer-bin-plugin": "^1.9.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2.0",
        "drevops/phpcs-standard": "^0.6.2",
        "drupal/coder": "^9@alpha",
        "ergebnis/composer-normalize": "^2.50.0",
        "laravel/serializable-closure": "^2.0.9",
        "mockery/mockery": "^1.6.12",
        "phpstan/phpstan": "^2.1.39",
        "phpunit/phpunit": "^11.5.53",
        "rector/rector": "^2.3.6",
        "symfony/finder": "^7.4.5"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/AlexSkrypnyk/prompts.git",
            "canonical": true
        }
    ],
    "autoload": {
        "psr-4": {
            "DrevOps\\VortexInstaller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrevOps\\VortexInstaller\\Tests\\": "tests"
        },
        "classmap": [
            "tests"
        ]
    },
    "bin": [
        "installer.php"
    ],
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "bump-after-update": true,
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@composer bin box require --dev humbug/box",
            "box validate",
            "box compile"
        ],
        "lint": [
            "phpcs",
            "phpstan",
            "rector --dry-run"
        ],
        "lint-fix": [
            "rector",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor vendor-bin",
        "test": "phpunit --no-coverage",
        "test-coverage": "php -d pcov.directory=. vendor/bin/phpunit",
        "update-snapshots": "update-snapshots --test-dir= testHandlerProcess tests/Fixtures/handler_process"
    }
}

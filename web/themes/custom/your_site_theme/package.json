{
  "name": "your_site",
  "version": "1.0.0",
  "private": true,
  "description": "NodeJS dependencies for YOURSITE project",
  "devDependencies": {
    "@homer0/prettier-plugin-jsdoc": "^11.0.2",
    "autoprefixer": "^10.4.22",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-no-jquery": "^3.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-yml": "^1.19.0",
    "patch-package": "^6.5.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.7.4",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^7.0.1",
    "stylelint-scss": "^6.12.1",
    "terser": "^5.39.0"
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 8",
    "iOS >= 7"
  ],
  "scripts": {
    "build": "npm run clean && mkdir -p build/js && npm run concat && npm run uglify && npm run sass:prod && npm run postcss:prod && npm run copy",
    "build-dev": "npm run clean && mkdir -p build/js && npm run concat && npm run sass:dev && npm run postcss:dev && npm run copy",
    "clean": "rm -rf build",
    "concat": "find js -name '*.js' ! -name '*.min.js' -exec cat {} + > build/js/your_site_theme.min.js",
    "copy": "npm run copy:images && npm run copy:fonts",
    "copy:fonts": "mkdir -p build/fonts && cp -r fonts/* build/fonts/ 2>/dev/null || true",
    "copy:images": "mkdir -p build/images && cp -r images/* build/images/ 2>/dev/null || true",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-css": "stylelint 'scss/**/*.scss'",
    "lint-css-fix": "stylelint 'scss/**/*.scss' --fix",
    "lint-fix": "npm run lint-js-fix && npm run lint-css-fix",
    "lint-js": "eslint 'js/**/*.js' --ignore-pattern '*.min.js'",
    "lint-js-fix": "eslint 'js/**/*.js' --ignore-pattern '*.min.js' --fix",
    "postcss:dev": "postcss build/css/your_site_theme.min.css -o build/css/your_site_theme.min.css --map",
    "postcss:prod": "postcss build/css/your_site_theme.min.css -o build/css/your_site_theme.min.css --no-map",
    "postinstall": "patch-package",
    "sass:dev": "sass scss/styles.scss build/css/your_site_theme.min.css --source-map --style=expanded",
    "sass:prod": "sass scss/styles.scss build/css/your_site_theme.min.css --no-source-map --style=compressed",
    "uglify": "terser build/js/your_site_theme.min.js -o build/js/your_site_theme.min.js -c drop_console=true -m reserved=['jQuery','Drupal'] 2>/dev/null || true",
    "watch": "chokidar 'js/**/*.js' 'scss/**/*.scss' -c 'npm run build-dev'"
  }
}

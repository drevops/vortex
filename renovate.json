{
    "extends": ["config:base"],
    "branchPrefix": "deps/",
    "labels": ["PR: Dependencies"],
    "assignees": [],
    "ignorePresets": [":prHourlyLimit2"],
    "rangeStrategy": "update-lockfile",
    "timezone": "Australia/Melbourne",
    "enabledManagers": ["composer", "dockerfile", "docker-compose", "github-actions"],
    "packageRules": [
        {
            "matchPackageNames": ["php"],
            "enabled": false
        },
        {
            "groupName": "Major all - skipped to update manually",
            "matchDatasources": ["packagist"],
            "matchUpdateTypes": ["major"],
            "matchPackagePatterns": [".*"],
            "enabled": false
        },
        {
            "groupName": "Minor and Patch Contrib",
            "groupSlug": "drupal-minor-patch-contrib",
            "matchDatasources": ["packagist"],
            "separateMinorPatch": false,
            "matchPackagePatterns": [".*"],
            "excludePackageNames": [
                "drupal/core-composer-scaffold",
                "drupal/core-project-message",
                "drupal/core-recommended"
            ]
        },
        {
            "groupName": "Minor and Patch Core",
            "groupSlug": "drupal-minor-patch-core",
            "schedule": ["before 2am"],
            "matchDatasources": ["packagist"],
            "matchUpdateTypes": ["patch", "minor"],
            "matchPackageNames": [
                "drupal/core-composer-scaffold",
                "drupal/core-project-message",
                "drupal/core-recommended"
            ]
        },
        {
            "groupName": "Container images excluded",
            "matchManagers": ["dockerfile", "docker-compose"],
            "matchPackageNames": [
                "selenium/standalone-chrome",
                "seleniarm/standalone-chromium"
            ],
            "enabled": false
        },
        {
            "groupName": "Container images",
            "groupSlug": "docker",
            "schedule": ["before 3am"],
            "matchManagers": ["dockerfile", "docker-compose"],
            "excludePackageNames": [
                "selenium/standalone-chrome",
                "seleniarm/standalone-chromium"
            ]
        },
        {
            "groupName": "GitHub Actions",
            "groupSlug": "github-actions",
            "schedule": ["before 3am"],
            "matchManagers": ["github-actions"]
        }
    ],
    "regexManagers": [
        {
            "fileMatch": ["^docker-compose\\.yml$"],
            "matchStrings": [
                "[^:]+:\\s*\"?\\${(?:.*):-(?<depName>.*?):(?<currentValue>.*?)(?:\\@sha256:.*)?}\"?"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ]
}

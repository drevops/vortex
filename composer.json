{
    "name": "your_org/your_site",
    "description": "Drupal 7 implementation of YOURSITE for YOURORG",
    "license": "proprietary",
    "require": {
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/preserve-paths": "^0.1.5",
        "drupal/coffee": "^2.3",
        "drupal/drupal": "^7.69",
        "drupal/drupal_helpers": "^1.4",
        "drupal/environment_indicator": "^2.9",
        "drupal/features": "^2.11",
        "drupal/libraries": "^2.5",
        "drupal/seckit": "^1.11",
        "drupal/shield": "^1.3",
        "drupal/stage_file_proxy": "^1.9",
        "drupal/strongarm": "^2.0",
        "drupal/wysiwyg": "^2.6",
        "drush/drush": "^8.1",
        "library/ckeditor": "^4.9.2",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/gherkin": "^4.6.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "drupal/coder": "^8.2.12",
        "drupal/console": "^1.0.2",
        "drupal/drupal-extension": "^3.4",
        "integratedexperts/behat-format-progress-fail": "^0.2",
        "integratedexperts/behat-screenshot": "^0.7",
        "integratedexperts/behat-steps": "^0.1.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mikey179/vfsstream": "^1.6",
        "phpcompatibility/php-compatibility": "^9.0",
        "phpunit/phpunit": "^6.5",
        "symfony/filesystem": "^3.2.8",
        "symfony/phpunit-bridge": "^3.4.3"
    },
    "autoload": {
        "classmap": [
            "scripts/composer/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "docroot/sites/all/modules/custom/your_site_core/tests/unit/",
            "tests/unit/"
        ]
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        "library/ckeditor": {
            "type": "package",
            "package": {
                "name": "library/ckeditor",
                "version": "4.9.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.cksource.com/CKEditor/CKEditor/CKEditor%204.9.2/ckeditor_4.9.2_standard.zip",
                    "type": "zip"
                }
            }
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Utilities\\composer\\DrupalSettings::create"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Utilities\\composer\\DrupalSettings::create"
        ]
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "docroot": [
                "type:drupal-core"
            ],
            "docroot/sites/all/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/sites/all/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/profiles/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/sites/all/libraries/{$name}": [
                "type:drupal-library"
            ],
            "docroot/sites/all/drush/{$name}": [
                "type:drupal-drush"
            ]
        },
        "preserve-paths": [
            "docroot/sites/all/modules/custom",
            "docroot/sites/all/themes/custom",
            "docroot/profiles/your_site_profile",
            "docroot/sites/all/drush",
            "docroot/sites/default/settings.php",
            "docroot/sites/default/default.settings.local.php",
            "docroot/sites/default/settings.local.php",
            "docroot/sites/default/files",
            "docroot/robots.txt",
            "docroot/.htaccess"
        ],
        "patches": {
            "behat/gherkin": {
                "Correctly filter features, now that the base path is correctly set": "https://github.com/Behat/Gherkin/compare/v4.6.0...a7d84eb6ba245ea268a304312d14660788bf6c29.patch"
            },
            "drupal/drupal": {
                "User picture is deleted after calls to user_save() - https://www.drupal.org/node/935592": "https://www.drupal.org/files/issues/935592-151.patch",
                "Administer Users permission should be separate from Administer Account Settings - https://www.drupal.org/node/366950": "https://www.drupal.org/files/issues/administer_users_-366950-196.patch",
                "No navigation links on 404 pages - https://www.drupal.org/node/233807": "https://www.drupal.org/files/issues/drupal-navigation_on_403_404-233807-92.patch",
                "Add a variable to disable fixing file permissions during system_requirements() runtime checks - https://www.drupal.org/project/drupal/issues/1232572": "https://www.drupal.org/files/issues/2019-02-20/1232572-n79.patch"
            },
            "drupal/persistent_update": {
                "Add an ability to bypass all persistent updates - https://www.drupal.org/node/2824493": "https://www.drupal.org/files/issues/bypass-all-persistent-updates-2824493-3.patch"
            }
        }
    }
}
